			<service name="Timer"/>
			<service name="Report"/>
			<service name="Audio_out"/>
		</parent-provides>

		<start name="vfs_block" caps="240">
			<resource name="RAM" quantum="270M" />
			<provides><service name="Block"/></provides>
			<config>
				<vfs>
					<ram/>
					<import>
						<rom name="tc-firefox.raw"/>
					</import>
				</vfs>
				<default-policy file="/tc-firefox.raw" writeable="yes" block_size="512"/>
			</config>
			<route>
				<any-service> <parent/> </any-service>
			</route>
		</start>

		<start name="seoul" caps="920">
			<binary name="seoul"/>
			<resource name="RAM" quantum="3G"/>
			<route>
				<service name="ROM" unscoped_label="ld.lib.so">
					<parent label="ld-nova.lib.so"/>
				</service>
				<service name="ROM" label="platform_info">
					<parent label="platform_info"/> </service>
				<service name="ROM" label="config">
					<parent label="vm_seoul_audio.cfg"/> </service>
				<service name="Block"> <child name="vfs_block"/></service>
				<service name="Report" label="shape">
					<parent label="shape"/> </service>
				<service name="Gui" label="fb1.0">
				    <!-- XXX required for window/shape/pointer matching - does not work for other fbX.Y -->
					<parent label=""/>
				</service>
				<any-service><parent/></any-service>
			</route>
		</start>

	</config>

</runtime>
